model Problem {
    id        Int        @id @default(autoincrement())
    title     String
    chapter   String
    questions Question[]
}

model Question {
    id        Int      @id @default(autoincrement())
    Problem   Problem? @relation(fields: [problemId], references: [id])
    problemId Int?
    question  String
    answers   Answer[]
}

model Answer {
    id         Int      @id @default(autoincrement())
    question   Question @relation(fields: [id], references: [id])
    questionId Int
    answer     String
    isCorrect  Boolean
}
